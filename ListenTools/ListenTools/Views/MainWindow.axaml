<Window
    DataContext="{Binding Source={StaticResource VmLocator}, Path=MainVm}"
    Height="912"
    Icon="/Resources/Images/logo.png"
    Title="ListenTools"
    Width="1280"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ListenTools.Views.MainWindow"
    x:CompileBindings="False"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucs="clr-namespace:ListenTools.Controls"
    xmlns:vm="using:ListenTools.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <!--
        无边框窗口设置
        SystemDecorations="None"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaToDecorationsHint="True"
    -->

    <Grid ColumnDefinitions="Auto,*">
        <!--  标题栏  -->
        <Border
            Background="#1C1B2A"
            Grid.Column="0"
            Padding="12"
            Width="240">
            <Grid RowDefinitions="Auto,*,Auto">
                <!--  Logo 和标题  -->
                <StackPanel
                    DockPanel.Dock="Top"
                    Grid.Row="0"
                    Margin="0,12,0,20">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Height="48"
                            RadiusX="24"
                            RadiusY="24"
                            Width="48">
                            <Rectangle.Fill>
                                <ImageBrush Source="/Resources/Images/logo.png" />
                            </Rectangle.Fill>
                        </Rectangle>

                        <TextBlock
                            FontFamily="{StaticResource HarmonyOsFont}"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="16,0,0,0"
                            Text="Hapy Listen"
                            VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush>
                                    <GradientStop Color="Aqua" Offset="0" />
                                    <GradientStop Color="Red" Offset="0.25" />
                                    <GradientStop Color="Yellow" Offset="0.5" />
                                    <GradientStop Color="Blue" Offset="0.75" />
                                    <GradientStop Color="Green" Offset="1" />
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>

                    <Rectangle
                        Height="1"
                        Margin="0,18,0,0"
                        Stroke="{StaticResource ForeColor2}"
                        StrokeThickness="1" />
                </StackPanel>

                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <ListBox
                        Background="Transparent"
                        ItemContainerTheme="{StaticResource MainMenuItemStyle}"
                        ItemTemplate="{StaticResource MainMenuItemTemplate}"
                        ItemsSource="{Binding MainMenuSource}" />
                </StackPanel>

                <Border Grid.Row="2" Height="64">
                    <Grid ColumnDefinitions="Auto,*,Auto">

                        <Rectangle
                            Fill="Aqua"
                            Grid.Column="0"
                            Height="44"
                            RadiusX="22"
                            RadiusY="22"
                            Width="44" />

                        <TextBlock
                            FontFamily="{StaticResource HarmonyOsFont}"
                            FontSize="14"
                            Foreground="{StaticResource TxtForeBrush}"
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            Text="Joker"
                            VerticalAlignment="Center" />

                        <ucs:IconPathButton
                            Classes="Default"
                            DockPanel.Dock="Right"
                            Foreground="{StaticResource ForeColor3}"
                            Grid.Column="2"
                            Height="34"
                            HorizontalAlignment="Center"
                            IconPath="{StaticResource SettingsIcon}"
                            Padding="6"
                            Width="34" />
                    </Grid>
                </Border>

            </Grid>
        </Border>
    </Grid>

</Window>