<Window
    DataContext="{Binding Source={StaticResource VmLocator}, Path=MainVm}"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    Height="912"
    SystemDecorations="None"
    Title="ListenTools"
    Width="1280"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ListenTools.Views.MainWindow"
    x:CompileBindings="False"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucs="clr-namespace:ListenTools.Controls"
    xmlns:vm="using:ListenTools.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,*">
        <!--  标题栏  -->
        <Border
            Background="#1C1B2A"
            DoubleTapped="TitleBorder_OnDoubleTapped"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Height="72"
            Padding="12,0"
            PointerPressed="TitleBorder_OnPointerPressed">
            <DockPanel LastChildFill="False">
                <!--  Logo 和标题  -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Rectangle
                        Height="48"
                        RadiusX="24"
                        RadiusY="24"
                        VerticalAlignment="Center"
                        Width="48">
                        <Rectangle.Fill>
                            <ImageBrush Source="/Resources/Images/logo.png" />
                        </Rectangle.Fill>
                    </Rectangle>

                    <TextBlock
                        FontFamily="{StaticResource HarmonyOsFont}"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="6,0,0,0"
                        Text="Hapy Listen"
                        VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="Aqua" Offset="0" />
                                <GradientStop Color="Red" Offset="0.25" />
                                <GradientStop Color="Yellow" Offset="0.5" />
                                <GradientStop Color="Blue" Offset="0.75" />
                                <GradientStop Color="Green" Offset="1" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">

                    <ucs:IconPathButton
                        Classes="WindowOperationBtn"
                        Click="WindowMinButton_OnClick"
                        IconPath="{StaticResource WindowMinIcon}" />

                    <ucs:IconPathButton
                        Classes="WindowOperationBtn"
                        Click="WindowMaxButton_OnClick"
                        IconPath="{StaticResource WindowMaxIcon}"
                        Margin="12,0"
                        x:Name="WindowMaxButton" />

                    <ucs:IconPathButton
                        Classes="WindowOperationBtn"
                        Click="CloseWindowButton_OnClick"
                        IconPath="{StaticResource WindowCloseIcon}" />
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>

</Window>